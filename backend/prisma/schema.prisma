
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model binanceUsers{
  id              Int      @id @default(autoincrement())
  username        String      
  password        String
  depositAddress  String   @unique     
  privateKey      String      
  balance         Float
}

model withdrawalHotWallet{ //yet to implement 
  id              Int      @id @default(autoincrement())
  value           Float
  userToAddress   String   @unique
}
