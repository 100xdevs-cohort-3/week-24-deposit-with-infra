
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model binanceUsers{
  id              Int      @id @default(autoincrement())
  username        String      
  password        String
  depositAddress  String   @unique     
  privateKey      String      
  balance         Float
}

model withdrawalHotWallet{ //can include foreign key "id"
  id                Int                @id @default(autoincrement())
  value             Float
  userToAddress     String             @unique
  TransactionHash   String             @unique
}
